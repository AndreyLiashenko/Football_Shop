@model Football_Shop.Models.RegisterModel
@{          
    ViewBag.Title = "Register";
}

<h2>Регистрация</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h4>Регистрация пользователя</h4>
        <hr />
        @Html.ValidationSummary(false)

        <div>
            Электронный адрес
            <div>
                @Html.Editor("Email")
            </div>
        </div>

       

        <div>
            Пароль
            <div>
                @Html.Editor("Password")
            </div>
        </div>

        <div>
            Подтвердить пароль
            <div>
                @Html.Editor("PasswordConfirm")
            </div>
        </div>

        <div>
            <div>
                <input type="submit" value="Зарегистрировать" />
            </div>
        </div>
    </div>
}