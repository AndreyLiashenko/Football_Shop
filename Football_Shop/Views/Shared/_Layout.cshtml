<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")

</head>
<body>

    <ul class="navbar">
        <li>@Html.ActionLink("Домашняя страница", "Index", "Balls")</li>
        <li>@Html.ActionLink("О программе", "About", "Home")</li>
        <li>@Html.ActionLink("Контакт", "Contact", "Home")</li>
        <li>@Html.ActionLink("Регистрация", "Register", "Account")</li>
    </ul>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="contact">Контакты</p>
            <div class="content">
                <div class="row_for_img">
                    <img src="~/Content/Telegram.png" alt="Foto">
                    <span class="placing_contacts">andrii_liashenko</span>
                </div>
                <div class="row_for_img">
                    <img src="~/Content/gmail.png" alt="Foto">
                    <span class="placing_contacts">andrey_lyashenko44@gmail.com</span>
                </div>
                <div class="row_for_img">
                    <img src="~/Content/Insta.png" alt="Foto">
                    <span class="placing_contacts">andrii__liashenko</span>
                </div>
            </div>
            <p>&copy; Футбольный магазин Soccer for Life @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
